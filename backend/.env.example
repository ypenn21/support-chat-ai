# GCP Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
VERTEX_AI_LOCATION=us-central1

# Gemini Model Configuration
GEMINI_MODEL=gemini-1.5-pro
# Alternative: gemini-1.5-flash (faster, cheaper)

# Secret Manager
API_KEY_SECRET_NAME=support-chat-ai-api-key

# Firestore (optional for analytics)
FIRESTORE_COLLECTION=suggestions

# Server Configuration
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=info

# CORS (comma-separated origins)
ALLOWED_ORIGINS=chrome-extension://your-extension-id,http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Development
ENVIRONMENT=development
DEBUG=true
