{
  "manifest_version": 3,
  "name": "Support Chat AI Assistant",
  "version": "0.1.0",
  "description": "AI-powered response automation for customers interacting with support",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.coinbase.com/*",
    "https://*.robinhood.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.coinbase.com/*",
        "https://*.robinhood.com/*",
        "http://localhost/*",
        "http://127.0.0.1/*",
        "<all_urls>"
      ],
      "js": ["src/content/index.ts"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
